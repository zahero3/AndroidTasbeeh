<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State (Darker for Click Effect) -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="270"
                android:startColor="#B3D9FF"
                android:centerColor="#99C2FF"
                android:endColor="#80AFFF"
                android:type="linear"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

    <!-- Default State (3D Effect with Shadow) -->
    <item>
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="270"
                android:startColor="#0AFF9F"
                android:centerColor="#28E261"
                android:endColor="#4EBF43"
                android:type="linear"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

</selector>