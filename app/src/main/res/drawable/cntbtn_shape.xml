<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Multicolor gradient to match your image -->
    <gradient
        android:type="radial"
        android:gradientRadius="150dp"
        android:centerX="50%"
        android:centerY="50%"
        android:startColor="#FFB6C1"
        android:centerColor="#FFDEED"
        android:endColor="#A5F3EB"/>

    <!-- Soft shadow effect -->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>

</shape>