<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="30dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#A81B0F"
        android:startColor="#E88108"
        android:endColor="#FFCCC6"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />
    <size
        android:width="80dp"
        android:height="80dp"
        />
    <stroke
        android:width="3dp"
        android:color="#870014"
        />
</shape>