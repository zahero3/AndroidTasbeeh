<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State (Button Clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80dp"
                android:centerColor="#CC0000"
            android:startColor="#990000"
            android:endColor="#660000"/>
            <stroke android:width="3dp" android:color="#550000"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

    <!-- Default State (Red Steel Button) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80dp"
                android:centerColor="#FF5555"
            android:startColor="#FF2222"
            android:endColor="#B30000"/>
            <stroke android:width="3dp" android:color="#880000"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

</selector>